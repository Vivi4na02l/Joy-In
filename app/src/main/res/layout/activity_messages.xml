<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A4A4A"
    tools:context=".scenes.message.MessagesActivity">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="#3B3B3B"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/btnLogoHome"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:backgroundTint="#3B3B3B"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pixelgame" />

        <EditText
            android:id="@+id/txtFilter"
            android:layout_width="183dp"
            android:layout_height="42dp"
            android:layout_marginVertical="15px"
            android:background="#FFFFFF"
            android:backgroundTint="#E6FFFFFF"
            android:ems="10"
            android:inputType="text"
            android:text="Search server..."
            android:textColor="#515151"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="126dp" />

        <ImageButton
            android:id="@+id/btnSett"
            android:layout_width="23dp"
            android:layout_height="63dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:backgroundTint="#3B3B3B"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/definitions" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:background="#707070"
        android:backgroundTint="#3B3B3B"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnFriends"
            android:layout_width="70dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:backgroundTint="#3B3B3B"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/friends"/>

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="86dp"
            android:layout_height="51dp"
            android:backgroundTint="#3B3B3B"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/home"/>

        <ImageButton
            android:id="@+id/btnMessages"
            android:layout_width="87dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:backgroundTint="#3B3B3B"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/chatfilled"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>