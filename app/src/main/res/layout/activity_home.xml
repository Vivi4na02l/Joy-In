<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A4A4A"
    tools:context=".scenes.home.HomeActivity">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="#3B3B3B"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/btnLogoHome"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:backgroundTint="#3B3B3B"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pixelgame" />

        <EditText
            android:id="@+id/txtFilter"
            android:layout_width="183dp"
            android:layout_height="42dp"
            android:layout_marginVertical="15px"
            android:background="#FFFFFF"
            android:backgroundTint="#E6FFFFFF"
            android:ems="10"
            android:inputType="text"
            android:text="Search server..."
            android:textColor="#515151"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="126dp" />

        <ImageButton
            android:id="@+id/btnSett"
            android:layout_width="23dp"
            android:layout_height="63dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:backgroundTint="#3B3B3B"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/definitions" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_700"
        android:text="Servers you're following"
        android:textColor="#FFFFFF"
        android:textSize="60px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.071" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:background="#707070"
        android:backgroundTint="#3B3B3B"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnFriends"
            android:layout_width="70dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:backgroundTint="#3B3B3B"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/friends" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="86dp"
            android:layout_height="51dp"
            android:backgroundTint="#3B3B3B"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/homefilled" />

        <Button
            android:id="@+id/btnMessages"
            android:layout_width="87dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:backgroundTint="#3B3B3B"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/chat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:background="@drawable/cod">

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/purple_700"
        android:text="Popular this week"
        android:textColor="#FFFFFF"
        android:textSize="60px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="0dp"
        android:background="@drawable/among_us">
        
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>